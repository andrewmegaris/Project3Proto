<p id="notice"><%= notice %></p>

<h1>Listing Documents</h1>

<table border="2">
  <thead>
    <tr>
      <th>Filename</th>
      <th>Content type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @folders.each do |folder| %>
    <tr>
     <td><%= link_to folder.name, folder_path(folder) %></td>
      <td>Folder</td>
      <td>Owner:</td>
        <td><%= link_to 'Download', folder %></td>
        <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
        <td><%= link_to 'Delete', folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
    </tr> 
    
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.filename %></td>
        <td><%= document.content_type %></td>
        <td>Owner: <%= document.belongs_to %> </td>
        <td><%= link_to 'Download', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
<%=link_to "New Folder", new_folder_path %>

